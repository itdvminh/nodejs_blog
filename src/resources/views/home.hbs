<div class="m-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h6 class="card-title">{{this.name}}<h6>
                    </a>
                    {{!-- <p class="card-text">{{this.description}}</p> --}}
                    <a href="#" class="btn btn-primary">Ghé thăm</a>
                </div>
            </div>
        </div>
        {{else}}
        <h4 class="text-center"> Bạn  đăng khóa học nào. <a href="/courses/create"> Đăng khóa học ngay</a>
        </h4>
        {{/each}}
    </div>
</div>
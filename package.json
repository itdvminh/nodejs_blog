{
  "name": "blog",
  "version": "1.0.0",
  "description": "Create my blog with nodejs",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --inspect src/index.js",
    "node-sass": "node-sass --watch src/resources/scss/ --output src/public/css/",
    "prettier": "prettier --single-quote --trailing-comma all --tab-width 4 --write src/**/*.{js,json,scss}",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itdvminh/nodejs_blog.git"
  },
  "keywords": [
    "blog",
    "nodejs"
  ],
  "author": "dvminh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/itdvminh/nodejs_blog/issues"
  },
  "homepage": "https://github.com/itdvminh/nodejs_blog#readme",
  "lint-staged": {
    "src/**/*.{js,json,scss}": "prettier --single-quote --trailing-comma all --tab-width 4 --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "morgan": "^1.10.0",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1"
  }
}